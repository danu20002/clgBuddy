<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Departments.Aeronautical">


       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/danu_color"
               android:textSize="30sp"
               android:textStyle="bold"
               android:text="File Uploader"
               android:textAlignment="center"
               android:layout_margin="15dp"/>


           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:background="@color/backgroundsetter">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Name of The File"
                   android:textAlignment="textStart"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:id="@+id/pdf_name_uploader"
                   android:background="@drawable/shapearound"/>

           </com.google.android.material.textfield.TextInputLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Please Enter name of pdf "
               android:textStyle="bold|italic"
               android:textSize="10sp"
               android:textColor="#B60303"
               android:layout_marginStart="15dp"
               android:id="@+id/error_apti"
               android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="center"

                android:text="UploadFile"
                android:drawableEnd="@drawable/baseline_add_24"
                android:layout_margin="15dp"
                android:textSize="15sp"
                android:textStyle="bold"

                android:drawablePadding="5dp"
                android:id="@+id/uploadfile"/>


       </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:drawableEnd="@drawable/baseline_help_outline_24"
        android:text="Help?"
        android:id="@+id/help_file_upload"/>




</RelativeLayout>