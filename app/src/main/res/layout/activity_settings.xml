<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundsetter"
    tools:context=".Activities.settings">
<Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:id="@+id/toolbar_settings"

    android:title="Settings">

</Toolbar>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/bottomnav_settings"
    android:layout_below="@+id/toolbar_settings">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="60dp"
             app:cardCornerRadius="5dp"
             android:id="@+id/account_details"
             android:background="?selectableItemBackground"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginTop="5dp"
             app:cardElevation="10dp">
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Profile Settings"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:layout_gravity="center"
                 android:gravity="start"
                 android:drawablePadding="25dp"
                 android:layout_margin="15dp"
                 android:drawableRight="@drawable/baseline_person_24"/>
         </androidx.cardview.widget.CardView>
          <View
              android:layout_width="match_parent"
              android:layout_height="5dp"/>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              app:cardCornerRadius="5dp"
              android:id="@+id/logout_account"
              android:background="?selectableItemBackground"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp"
              app:cardElevation="10dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Log out Account"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="start"
                  android:drawablePadding="25dp"
                  android:layout_margin="15dp"
                  android:drawableRight="@drawable/baseline_logout_24"/>
          </androidx.cardview.widget.CardView>
          <View
              android:layout_width="match_parent"
              android:layout_height="5dp"
              />
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              app:cardCornerRadius="5dp"
              android:id="@+id/delete_account"
              android:background="?selectableItemBackground"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp"
              app:cardElevation="10dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Delete Account"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="start"
                  android:drawablePadding="25dp"
                  android:layout_margin="15dp"
                  android:drawableRight="@drawable/baseline_delete_forever_24"/>
          </androidx.cardview.widget.CardView>
          <View
              android:layout_width="match_parent"
              android:layout_height="5dp"
              />

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              app:cardCornerRadius="5dp"
              android:id="@+id/help_card"
              android:background="?selectableItemBackground"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp"
              app:cardElevation="10dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Help?"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="start"
                  android:drawablePadding="25dp"
                  android:layout_margin="15dp"
                  android:drawableRight="@drawable/baseline_help_outline_24"/>
          </androidx.cardview.widget.CardView>
          <View
              android:layout_width="match_parent"
              android:layout_height="5dp"
              />
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              app:cardCornerRadius="5dp"
              android:id="@+id/add_notes_card"
              android:background="?selectableItemBackground"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp"
              app:cardElevation="10dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Add Notes "
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="start"
                  android:drawablePadding="25dp"
                  android:layout_margin="15dp"
                  android:drawableRight="@drawable/baseline_add_24"/>
          </androidx.cardview.widget.CardView>
          <View
              android:layout_width="match_parent"
              android:layout_height="5dp"
              />
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              app:cardCornerRadius="5dp"
              android:id="@+id/privacy_policy"
              android:background="?selectableItemBackground"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="5dp"
              app:cardElevation="10dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Privacy and policy"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="center"/>
          </androidx.cardview.widget.CardView>
          <View
              android:layout_width="match_parent"
              android:layout_height="5dp"
              />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:text="Notes Contributors"
              android:textStyle="bold"
             android:textAlignment="center"
             android:textSize="30dp"
             android:textAllCaps="true"
             android:layout_marginTop="10dp"
             />
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:layout_margin="15dp"
              app:cardElevation="10dp"
              app:cardCornerRadius="5dp">
              <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp">
                  <de.hdodenhof.circleimageview.CircleImageView
                      android:id="@+id/profile_image_contributor"
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:layout_gravity="center"
                      android:src="@drawable/baseline_person_24"
                      app:civ_border_color="#FF000000"
                      app:civ_border_width="2dp"/>
                      <androidx.appcompat.widget.LinearLayoutCompat
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="5dp"
                          android:orientation="vertical">
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Ninganna S Ainapur"
                              android:textStyle="bold"
                              android:textAllCaps="true"
                              android:textSize="18sp"
                              android:textAlignment="textStart"
                              android:textColorHighlight="@color/danu_color"/>
                              <TextView
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Electronics and Communication"
                                  android:textSize="15sp"
                                  android:textStyle="normal"
                                  />
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="2gi20ec070@students.git.edu"
                              android:textStyle="italic"
                              android:textSize="14sp"
                              android:textAlignment="textStart"/>



                      </androidx.appcompat.widget.LinearLayoutCompat>
              </androidx.appcompat.widget.LinearLayoutCompat>
          </androidx.cardview.widget.CardView>
      </LinearLayout>
  </ScrollView>


</FrameLayout>

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:menu="@menu/menu_up"
    android:id="@+id/bottomnav_settings"
    app:labelVisibilityMode="labeled"
    />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/settings_progressbar"
        android:visibility="gone"/>

</RelativeLayout>